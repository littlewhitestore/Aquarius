<view class="page">

  <view class="swiper-container">
    <swiper autoplay="auto" circular="true" interval="5000" duration="500" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
      <block wx:for="{{slider}}" wx:key="unique">
        <swiper-item>
          <image src="{{item.url}}" class="img"></image>
        </swiper-item>
      </block>
    </swiper>

    <view class="dots">
      <block wx:for="{{slider}}" wx:key="unique">
        <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
      </block>
    </view>
  </view>

  <view class="space">
    <view class="line"></view>
    <view class="font">好物精选</view>
    <view class="line"></view>
  </view>

  <view class="box"  wx:for="{{productData}}">
    <view class="left">
      <image src="../../images/33.png"></image>
    </view>
    <view class="right">
      <view class="title">
        <text>{{item.name}}</text>
      </view>
      <view class="price">
        <view class='money'>
          <view class="now"> ￥{{item.price_yh}}</view>
          <view class="old">￥{{item.price}} </view>
        </view>
        <view class='buy' bindtap='godetail'>
          <text require>立即抢购 ></text> </view>
      </view>
    </view>
  </view>
  <view class="base"> </view>

